{
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none",
    "arrowParens": "always",
    "overrides": [
        {
            "files": ["*.scss", "*.css"],
            "options": {
                "tabWidth": 4,
                "singleQuote": false
            }
        },
        {
            "files": ["*.js", "*.ts"],
            "options": {
                "tabWidth": 4,
                "singleQuote": true
            }
        },
        {
            "files": ["*.html"],
            "options": {
                "tabWidth": 4,
                "singleQuote": false,
                "printWidth": 180
            }
        },
        {
            "files": ["*.json"],
            "options": {
                "tabWidth": 2,
                "singleQuote": false
            }
        }
    ]
}
