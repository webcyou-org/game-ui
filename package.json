{
    "name": "game-ui",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "nuxt",
        "build": "nuxt build",
        "start": "nuxt start",
        "generate": "nuxt generate",
        "lint": "npm run lint:js:all && npm run lint:scss:all",
        "lint:fix": "npm run lint:js:fix:all && npm run lint:scss:fix:all",
        "lint:js:all": "npm run lint:js .; exit 0",
        "lint:js:fix:all": "npm run lint:js:fix .; exit 0",
        "lint:js": "eslint --ext .js,.ts,.vue",
        "lint:js:fix": "eslint --fix --ext .js,.ts,.vue",
        "lint:scss:all": "npm run lint:scss './**/*.scss' './**/*.vue' --syntax scss; exit 0",
        "lint:scss:fix:all": "npm run lint:scss:fix './**/*.scss' './**/*.vue' --syntax scss; exit 0",
        "lint:scss": "stylelint",
        "lint:scss:fix": "stylelint --fix --syntax scss",
        "test": "jest",
        "format": "prettier --write"
    },
    "lint-staged": {
        "*.{js,vue}": "npm run lint",
        "*.{css,vue}": "stylelint"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {
        "@nuxtjs/axios": "^5.13.1",
        "core-js": "^3.9.1",
        "lodash": "^4.17.21",
        "nuxt": "^2.15.3",
        "vue-property-decorator": "^9.1.2",
        "vuex-class": "^0.3.2"
    },
    "devDependencies": {
        "@nuxt/types": "^2.15.3",
        "@nuxt/typescript-build": "^2.1.0",
        "@nuxtjs/eslint-config-typescript": "^6.0.0",
        "@nuxtjs/eslint-module": "^3.0.2",
        "@nuxtjs/stylelint-module": "^4.0.0",
        "@types/lodash": "^4.14.170",
        "@vue/test-utils": "^1.1.3",
        "babel-core": "7.0.0-bridge.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^26.6.3",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-nuxt": "^2.0.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-vue": "^7.7.0",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "node-sass": "^5.0.0",
        "nuxt-sass-resources-loader": "^2.0.5",
        "prettier": "^2.2.1",
        "sass-loader": "^10.0.0",
        "stylelint": "^13.12.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-recommended-scss": "^4.2.0",
        "stylelint-config-standard": "^21.0.0",
        "stylelint-scss": "^3.19.0",
        "ts-jest": "^26.5.4",
        "vue-class-component": "^7.2.6",
        "vue-jest": "^3.0.4"
    }
}
